<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <com.yan.fastview_library.viewgroup.viewpagers.InfiniteLooperView
            android:id="@+id/banner_looper_view1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:clipChildren="false"
            app:blv_switch_time="2000" />

        <com.yan.fastview_library.viewgroup.viewpagers.InfiniteLooperView
            android:id="@+id/banner_looper_view2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:clipChildren="false"
            app:blv_switch_time="2000" />

        <com.yan.fastview_library.viewgroup.viewpagers.InfiniteLooperView
            android:id="@+id/banner_looper_view3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:clipChildren="false"
            app:blv_switch_time="2000" />

        <com.yan.fastview_library.viewgroup.viewpagers.InfiniteLooperView
            android:id="@+id/banner_looper_view4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:clipChildren="false"
            android:layout_centerInParent="true"
            app:blv_switch_time="2000" />

        <com.yan.fastview_library.viewgroup.viewpagers.InfiniteLooperView
            android:id="@+id/banner_looper_view5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:clipChildren="false"
            android:layout_centerInParent="true"
            app:blv_switch_time="2000" />

        <com.yan.fastview_library.viewgroup.viewpagers.InfiniteLooperView
            android:id="@+id/banner_looper_view6"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:clipChildren="false"
            android:layout_centerInParent="true"
            app:blv_switch_time="2000" />

    </LinearLayout>

</ScrollView>