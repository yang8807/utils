<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yan.fastview_library.view.SideBar
        android:id="@+id/sideBar"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/side_background_select_color"
        android:paddingBottom="100dp"
        android:paddingTop="100dp"
        android:textColor="@drawable/side_bar_select_color"
        android:textSize="13sp"
        app:sb_touch_character_drawable="@drawable/bg_character" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sideBar"
        android:text="ABCDEFG"
        android:textColor="@drawable/side_bar_select_color"
        android:textSize="15sp" />
</RelativeLayout>