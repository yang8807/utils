<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.yan.fastview_library.view.SideBar
            android:id="@+id/sideBar1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/side_background_select_color"
            android:paddingBottom="100dp"
            android:paddingTop="100dp"
            android:textColor="@drawable/side_bar_select_color"
            android:textSize="13sp"
            app:sb_touch_character_drawable="@drawable/bg_character" />

        <com.yan.fastview_library.view.SideBar
            android:id="@+id/sideBar2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:textColor="@drawable/side_bar_select_color"
            android:textSize="13sp"
            app:sb_touch_character_drawable="@drawable/bg_character" />

        <com.yan.fastview_library.view.SideBar
            android:id="@+id/sideBar3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:textColor="@drawable/side_bar_select_color_green"
            android:textSize="13sp"
            app:sb_touch_character_drawable="@drawable/bg_character_ring" />

        <com.yan.fastview_library.view.SideBar
            android:id="@+id/sideBar4"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/side_background_select_color"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:text="ABCDEFGHIJKLMNOPQ"
            android:textColor="@drawable/side_bar_select_color"
            android:textSize="13sp"
            app:sb_touch_character_drawable="@color/loading_6" />

        <com.yan.fastview_library.view.SideBar
            android:id="@+id/sideBar5"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:text="ABCDEFGHIJKLMNOPQ"
            android:textColor="@drawable/side_bar_select_color"
            android:textSize="13sp"
            app:sb_touch_character_drawable="@drawable/bg_character" />

        <com.yan.fastview_library.view.SideBar
            android:id="@+id/sideBar6"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/side_background_select_color"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:text="123456789"
            android:textColor="@drawable/side_bar_select_color"
            android:textSize="13sp"
            app:sb_touch_character_drawable="@drawable/bg_character" />

        <com.yan.fastview_library.view.SideBar
            android:id="@+id/sideBar7"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:text="123456"
            android:textColor="@drawable/side_bar_select_color"
            android:textSize="13sp"
            app:sb_touch_character_drawable="@drawable/bg_character" />

        <com.yan.fastview_library.view.SideBar
            android:id="@+id/sideBar8"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/side_background_select_color"
            android:paddingBottom="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="50dp"
            android:text="123"
            android:textColor="@drawable/side_bar_select_color"
            android:textSize="13sp"
            app:sb_touch_character_drawable="@drawable/bg_character" />
    </LinearLayout>

    <TextView
        android:id="@+id/touchText"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_character"
        android:gravity="center"
        android:text="A"
        android:textColor="@android:color/white"
        android:textSize="100sp"
        android:visibility="gone" />
</RelativeLayout>