<resources>

    <!-- Base application theme. -->
    <!-- Theme.AppCompat. -->
    <!--Theme.AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        //if you don't set this the background will be black when you slide.
        <item name="android:windowIsTranslucent">true</item>
        //set the right in/out animation of Activity,you can change this to yours
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
        <!--        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 主要用来设置不能滑动的,使用了SwipeBackHelper,但是部分页面,并不需要进行滑动 -->
    <style name="MainTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
    </style>



</resources>
