<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="drawable_width" format="dimension" />
    <!-- 居中 -->
    <attr name="justifyCenter" format="boolean" />
    <!-- 定义形状 -->
    <attr name="shapeType" format="integer">
        <enum name="rect" value="1" />
        <enum name="oval" value="2" />
        <enum name="corner_rect" value="3" />
    </attr>
    <attr name="tv_radius" format="dimension" />
    <!-- 设置左边,右边,顶部,底部的图片的大小-->
    <attr name="leftDrawableWidth" format="dimension" />
    <attr name="righDrawableWidth" format="dimension" />
    <attr name="topDrawableWidth" format="dimension" />
    <attr name="bottomDrawableWidth" format="dimension" />

    <declare-styleable name="TextViewExtends">
        <!-- 背景颜色用来放置颜色,只能是纯色的,然后根据这个颜色,来设置自动生成一个或浅或深的颜色-->
        <attr name="android:background" />
        <!--  使用了这一属性之后,如果其他drawable没有设定,也是使用这一属性 -->
        <attr name="drawable_width" />
        <!--- 是否居中,默认情况下是居中的-->
        <attr name="justifyCenter" />
        <!-- 设置左边,右边,上边,下边的图片 -->
        <attr name="android:drawableLeft" />
        <attr name="android:drawableRight" />
        <attr name="android:drawableTop" />
        <attr name="android:drawableBottom" />
        <!-- 设置图片的渲染颜色 -->
        <attr name="android:tint" />
        <!-- 设置按钮背景的形态,可以是圆形,矩形,圆角矩形 -->
        <attr name="shapeType" />
        <attr name="tv_radius" />
        <attr name="leftDrawableWidth" />
        <attr name="righDrawableWidth" />
        <attr name="topDrawableWidth" />
        <attr name="bottomDrawableWidth" />
    </declare-styleable>
</resources>