<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 只要那个属性有填写,就会自动的去加载这个东西,两者之中只有一个居于中间 -->
    <declare-styleable name="DecoratedView">
        <attr name="android:src" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <!-- 线条的高度 -->
        <attr name="dev_lineHeight" format="dimension" />
        <!-- 线条与中心展示物之间的间距 -->
        <attr name="dev_paddingCenter" format="dimension" />
        <!-- 线条的颜色 -->
        <attr name="dev_lineColor" format="color" />
        <!-- 线条的的单位长度 -->
        <attr name="dev_lineWidth" format="dimension" />
        <!-- 线条的之间的间距 -->
        <attr name="dev_lineCap" format="dimension" />
        <!-- 是否需要绘制虚线 -->
        <attr name="dev_type" format="integer">
            <enum name="none" value="0" />
            <enum name="drawable" value="1" />
            <enum name="text" value="2" />
        </attr>
    </declare-styleable>
</resources>