<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TagFlowLayout 自定义属性 -->
    <attr name="isAssaginSpace" format="boolean"></attr>
    <declare-styleable name="TagFlowLayout">
        <attr name="isAssaginSpace" />
    </declare-styleable>

    <declare-styleable name="CenterViewGroup">
        <attr name="cv_numberColumn" format="integer" />
        <!-- 4,3,2,1..类似这样传递每一行的个数-->
        <attr name="cv_numberColumnArray" format="string" />
        <!--  初值方向的间距-->
        <attr name="cv_verticalSpacing" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ClearAutoCompleteText">
        <attr name="clear_tint" format="color" />
    </declare-styleable>
    <!-- 字母导航栏 -->
    <declare-styleable name="SideBar">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:background" />
        <attr name="android:text" />
        <!-- 设置字母导航栏,字母被选中后的背景 -->
        <attr name="sb_touch_character_drawable" format="reference" />
        <!-- 没有用到的导航字母的颜色,这里可以额外设定的 -->
        <attr name="validCharacterTextColor" format="color" />
    </declare-styleable>
    <!-- 轮动广告栏 -->
    <declare-styleable name="BannerLoopView">
        <!--在一个页面的停留时间 -->
        <attr name="blv_dwell_time" format="integer" />
        <!--一个页面切换到另一个页面所需要的时间 -->
        <attr name="blv_switch_time" format="integer" />
    </declare-styleable>
    <!-- 轮动广告栏的指示器 -->
    <declare-styleable name="BannerLooperIndicator">
        <attr name="android:orientation" />
        <attr name="bli_interval_padding" format="dimension" />
        <attr name="bli_normal" format="reference|color" />
        <attr name="bli_select" format="reference|color" />
        <attr name="bli_indicator_normal_size" format="dimension" />
        <attr name="bli_indicator_select_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SelectableRoundedImageView">
        <attr name="sriv_left_top_corner_radius" format="dimension" />
        <attr name="sriv_right_top_corner_radius" format="dimension" />
        <attr name="sriv_left_bottom_corner_radius" format="dimension" />
        <attr name="sriv_right_bottom_corner_radius" format="dimension" />
        <attr name="sriv_border_width" format="dimension" />
        <attr name="sriv_border_color" format="color" />
        <attr name="sriv_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>
</resources>